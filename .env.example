NODE_ENV = "development" # "development" || "staging" || "production"

APP_NAME = "Fluxync (Development)"
#--- --- --- --- --- --- ---#


# --- Database
DB_USERNAME = "root"
DB_PASSWORD = ""
DB_DATABASE = "db_fluxync" # this variable concating with ("_", NODE_ENV), so is depends on NODE_ENV
DB_DIALECT = "mysql"
DB_HOST = "127.0.0.1"
DB_PORT = 3306
DB_LOGGING = false


#--- --- --- --- --- --- ---#


# --- --- Server
# --- Thread
SERVER_THREADS = 1

# --- Server Listen
IP = '0.0.0.0'
PORT = 3002 # production: 7000 || staging: 7001 || development: 7002

SERVER_HOST = http://localhost
