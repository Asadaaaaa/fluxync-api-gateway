# --- --- API Configuration
# Middlewares
MIDDLEWARE_ORIGIN = '*'
MIDDLEWARE_JSON_LIMIT_SIZE = '50mb'

API_VERSION = 'v1'

# Logger
LOG_REQUEST = 'full' # full, medium, false

